body {
    padding-top: 60px;
    padding-bottom: 10px;
    width: 100%;
    height: 100%;
}

html {
    height: 100%;
    width: 100%;
}

/* styles for validation helpers */
.field-validation-error {
    color: #b94a48;
}

.field-validation-valid {
    display: none;
}

input.input-validation-error {
    border: 1px solid #b94a48;
}

input[type="checkbox"].input-validation-error {
    border: 0 none;
}

.validation-summary-errors {
    color: #b94a48;
}

.validation-summary-valid {
    display: none;
}

/* styles for removing the background from form */
.no-color {
    background-color: white;
    border-style: none;
}

div#home-carousel ol li {
    border: 1px solid black;
}

#user-info, #user-avatar {
    float: left;
}

#friend ul, #groups ul {
    margin: 0;
    padding: 0;
}

    #friend ul li, #groups ul li {
        display: inline-block;
        margin: 0 5px;
    }

        #friend ul li a {
            border-radius: 5px;
            background-color: #e0ffff;
            display: block;
            text-align: center;
            padding: 5px;
        }

            #friend ul li a:hover, #groups ul li a:hover {
                text-decoration: none;
                background-color: rgba(0, 206, 209, 0.5);
            }

    #groups ul li {
        background-color: #e0ffff;
        border-radius: 5px;
        padding: 5px;
    }

#pie-charts {
    margin-top: 15px;
}

#eatTimeChart, #priceChart {
    width: 200px;
    height: 250px;
}

.userInGroupItem {
    display: inline-block;
    margin-right: 20px;
}

#map_canvas {
    /*height: 300px;
    width: 600px;
    position: relative;*/
    margin-bottom: 15px;
    /*height: 90%;
    width: 90%;*/
}

.timer {
    font-size: 30px;
}

#places ul li {
    list-style: none;
    display: inline-block;
    border-radius: 100px;
    border: 1px solid #e0ffff;
    padding: 35px;
}

#user-picture {
    max-width: 80%;
    max-height: 80%;
}

.user-info {
    margin: 0;
    padding: 0;
}

.hungryGroup-container {
    position: relative;
    text-align: center;
    display: inline-block;
    border-radius:400px;
    height: 200px;
    width: 200px;
    padding: 25px;
    margin: 10px;
}

.hungryGroup-bgr {
    background: url(../img/plate.png);
    background-size: 100% 100%;
    background-repeat: no-repeat;
    opacity: 0.4;
    height: 253px;
    width: 253px;
    position: absolute;
    top: 0;
    left: 0;
}

.hungryGroup-content {
    text-align: center;
    position:relative;

}

    .hungryGroup-container:hover {
        background-color: rgba(168, 168, 168, 0.5);
    }

#place-title {
    text-align: center;
}

#place-title h2, #place-title h3 {
    display: inline-block;
}

#location-map {
    float: right;
    width: 400px;
}

#place-eatingtime-container, #place-price-container {
    display: inline-block;
}

#placeEatTimeChart, #placePriceChart {
    width: 200px;
    height: 200px;
}