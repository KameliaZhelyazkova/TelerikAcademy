@model IEnumerable<JusTeeth.App.ViewModels.HungryGroupViewModel>

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span10">

            @(Html.Kendo().ListView<JusTeeth.App.ViewModels.HungryGroupViewModel>(Model)
                .Name("listView")
                .TagName("div")
                .ClientTemplateId("template")
                .DataSource(dataSource => dataSource.PageSize(6))
                .Pageable()
            )
        </div>
        <div class="span2">
            <p>Filters</p>
        </div>
    </div>
</div>

<script type="text/x-kendo-tmpl" id="template">
    <div class="group">
        <p>
            Place:
            <strong>#:Place#</strong>
        </p>
        <p>
            Eat Time:
            <strong>#:EatTime#</strong>
        </p>
        <p>
            Starting Time:
            <br />
            <strong>#:StartingTime#</strong>
        </p>
        <p>
            Creator:
            <strong>#:Creator#</strong>
        </p>
        <p>
            <a href="/Groups/Join/#: Id #" class="btn">JOIN</a>
        </p>
    </div>
</script>


<style scoped>
    .group {
        text-align: center;
        display: inline-block;
        border: 1px solid gray;
        border-radius: 400px;
        min-height: 180px;
        min-width: 180px;
        padding: 40px;
        margin: 10px;
    }
</style>
