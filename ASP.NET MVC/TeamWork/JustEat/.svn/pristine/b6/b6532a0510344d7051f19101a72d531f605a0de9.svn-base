@using System.Security.Cryptography
@model JusTeeth.App.ViewModels.DetailedHungryGroupViewModel

@{
    ViewBag.Title = "GroupDetails";

    var eatTimePercent = 0;
    dynamic piePiece;
    switch (@Model.EatTime)
    {
        case "Ultrafast":
            eatTimePercent = 10;
            piePiece = new
            {
                category = @Model.EatTime,
                value = eatTimePercent,
                color = "#37e800"
            };
            break;
        case "Fast":
            eatTimePercent = 25;
            piePiece = new
            {
                category = @Model.EatTime,
                value = eatTimePercent,
                color = "#dae800"
            };
            break;
        case "Medium":
            eatTimePercent = 50;
            piePiece = new
            {
                category = @Model.EatTime,
                value = eatTimePercent,
                color = "#e8a400"
            };
            break;
        case "Slow":
            eatTimePercent = 70;
            piePiece = new
            {
                category = @Model.EatTime,
                value = eatTimePercent,
                color = "#e85201"
            };
            break;
        case "GameBreaker":
            eatTimePercent = 90;
            piePiece = new
            {
                category = @Model.EatTime,
                value = eatTimePercent,
                color = "#ec0000"
            };
            break;
        default:
            eatTimePercent = 10;
            piePiece = new
            {
                category = @Model.EatTime,
                value = eatTimePercent,
                color = "#ec0000"
            };
            break;
    }

    var remainingPercent = 100 - eatTimePercent;
}

<h2>GroupDetails</h2>

<h5>EatTime: @Model.EatTime</h5>

<div id="charts-container" class="container">
    <div class="row-fluid">
        <div class="span8">
            <h3>Creator: @Model.Creator</h3>

            <p>Place: @Model.Place</p>
            <div id="map">Place for map</div>
        </div>
        <div class="span4">
            <div id="pie-charts">
                <div id="eating-container">
                    @(Html.Kendo().Chart()
                          .Name("eatTimeChart")
                          .Title(title => title
                                              .Text("Eating time chart")
                                              .Position(ChartTitlePosition.Bottom))
                          .Legend(legend => legend
                                                .Visible(true)
                          )
                          .Series(series =>
                          {
                              series.Pie(new dynamic[] {
                                  piePiece,
                                  new { value=remainingPercent,color="grey"},
                              })
                                    .Padding(0)
                                    .Labels(labels => labels
                                                          //.Background("transparent")
                                                          .Visible(false)
                                  )
                                    .StartAngle(90);
                          }))
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        @(Html.Kendo().ListView<JusTeeth.App.ViewModels.HungryUserViewModel>(Model.Users)
              .Name("usersListView")
              .TagName("div")
              .ClientTemplateId("template")
              )
    </div>
</div>

<script type="text/x-kendo-tmpl" id="template">
    <div class="product">
        @*<img src="<%=Url.Content(" ~ />content/web/foods/")%>#:ProductID#.jpg" alt="#:ProductName# image" />*@
        <h3>#: DisplayName #</h3>
    </div>
</script>